{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigests",
    ":configMigration"
  ],
  "schedule": ["every weekend"],
  "labels": ["dependencies"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "description": "Automerge patch updates after safety period",
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "minimumReleaseAge": "3 days"
    },
    {
      "description": "Group semantic-release packages",
      "matchPackagePatterns": ["^@semantic-release/", "^semantic-release$"],
      "groupName": "semantic-release"
    },
    {
      "description": "Group GitHub Actions",
      "matchManagers": ["github-actions"],
      "groupName": "actions"
    },
    {
      "description": "Group Rust dependencies",
      "matchManagers": ["cargo"],
      "groupName": "rust"
    }
  ]
}
